@model Domain.Entities.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Date Of Birth
        </dt>
        <dd class="col-sm-10">
            @Model.DOB.ToString("dd/MMM/yyyy")
        </dd>
        <dt class="col-sm-2">
            Grade
        </dt>
        <dd class="col-sm-10">
            @Model.Grade.GradeName
        </dd>
        <dt class="col-sm-2">
            Subject Learned
        </dt>
        <dd class="col-sm-10">
            @{
                int x = 1;
            }
            @foreach (var i in Model.Grade.SubjectsTaught)
            {
                <span>@x . @i.Subject.SubjectName</span>
                <br/>
                x++;
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.StudentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
